@import 'nib'
@import 'jeet'
@import 'rupture'

primary-color = #3a52b2

body
	font-size 18px
	min-height 100%
	a
		color primary-color
		font-size 1rem
		&:hover
			color darken(primary-color, 20%)
.container
	cf()

nav
	padding .8rem 3rem
	background-color primary-color
	fixed top
	span(1/1)
	z-index 400
	.logo
		display inline-block
		vertical-align top
		h3
			font-size 1rem
			color #fff
	.links
		display inline-block
		vertical-align top
		float right
		a
			font-size 1rem
			color #fff

pre
	tab-size 4

.white-fade
	span(1/1)
	height 6rem
	background linear-gradient(to top, rgba(255,255,255,1), rgba(255,255,255,0))
	fixed bottom
	z-index 0

.content
	padding-top 3.5rem
	width 100%
	min-height 100%
	.inner
		background-color #fff
		width 100%
		padding 3rem
	h4, h6
		font-weight 300
	h6
		color lighten(#4c5767, 20%)
	section + section
		margin-top 1.4rem
	p, b, pre
		margin-bottom 1rem
	b
		display block
	.section-content
		border-top lighten(#b0adba, 60%) 1px solid
		padding 1.4rem 0
		margin-top 1.4rem
	.list
		position fixed
		.item
			a
				color lighten(#4c5767, 40%)
			&.active
				a
					color primary-color
			& + .item
				margin-top .4rem
		+below('m')
			position relative


.hljs
	display block
	overflow-x auto
	padding 0.8rem 1rem
	color #4c5767
	background #f2f4f8
	border-radius 14px
	font-size 1rem
	font-family 'inconsolata', 'Monaco', 'Lucida Console', monospace

.hljs-comment,
.hljs-quote
	color #998
	font-style italic

.hljs-keyword,
.hljs-selector-tag,
.hljs-subst
	color #333
	font-weight bold

.hljs-number,
.hljs-literal,
.hljs-variable,
.hljs-template-variable,
.hljs-tag .hljs-attr
	color #00af86

.hljs-string,
.hljs-doctag
	color #da0b6b

.hljs-title,
.hljs-section,
.hljs-selector-id
	color #da0b6b
	font-weight bold

.hljs-subst
	font-weight normal

.hljs-type,
.hljs-class .hljs-title
	color #458
	font-weight bold

.hljs-tag,
.hljs-name,
.hljs-attribute
	color primary-color
	font-weight normal

.hljs-regexp,
.hljs-link
	color #009926

.hljs-symbol,
.hljs-bullet
	color #990073

.hljs-built_in,
.hljs-builtin-name
	color #01a8da

.hljs-meta
	color #999
	font-weight bold

.hljs-deletion
	background #fdd

.hljs-addition
	background #dfd

.hljs-emphasis
	font-style italic

.hljs-strong
	font-weight bold
