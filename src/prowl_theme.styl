@import 'nib'
@import 'jeet'
@import 'rupture'

body
	font-family 'Lato', sans-serif

.prowl
	.float-right
		float right
	.button
		display inline-block
		position relative
		overflow hidden
		border-radius 4px
		color #505050
		background-color #e4e9ec
		outline 0
		padding 0 1.4em
		text-align center
		border 0
		height 2.467em
		line-height 2.467em
		font-size 1em
		font-weight 600
		cursor pointer
		transition all 0.2s ease
		vertical-align top
		&.green
			background-color #13ce66
			color #fff
	&-overlay
		background-color #000
		background-color rgba(0,0,0,.85)
	&-close
		fixed top 2em right 2em
		z-index 4000
		text-align center
		cursor pointer
		i
			color rgba(#fff,.3)
			font-size 2em
		&:hover
			i
				color rgba(#fff,.6)
	&-modal
		background-color #fff
		content ''
		border 1px solid rgba(#222426,.15)
		border-radius 5px
		&_header, &_body, &_footer
			padding 0 1.5em
		&_header
			border-bottom 1px solid rgba(#222426,.15)
			padding-top 1.25em
			padding-bottom 1.25em
			h2
				margin 0
				font-size 1.4em
		&_body
			padding-top 2.4em
			padding-bottom 2.4em
			h5 + p
				margin-top .4em
		&_footer
			relative bottom 0
			span(1/1)
			padding-top 1em
			padding-bottom 1em
			background-color #F9FAFB
			border-top 1px solid rgba(#222426,.15)
			border-radius 0 0 5px 5px
			.float-right
				.button + .button
					margin-left .5em
