@import 'nib'
@import 'jeet'
@import 'rupture'

body
	&.locked
		overflow hidden
		touch-action none

.prowl
	display none
	span(1/1)
	height 100%
	fixed top left
	z-index 2000
	&-overlay
		height 100%
		width 100%
		background-color #000
		background-color rgba(12, 13, 13, 0.57)
	&-modal
		display none
		width 50%
		absolute top 50% left 50%
		transform translate(-50%, -50%)
		background-color #fff
		&.scale
			height 0
			width 0
			display block
		+below('m')
			position fixed
			top 0 !important
			left 0 !important
			transform translate(0)
			width 100%
			height 100%
			border-radius 0 !important
