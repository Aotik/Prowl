@import 'nib'
@import 'jeet'
@import 'rupture'

html
	&.locked
		overflow hidden
		touch-action none

.prowl
	display none
	&-overlay
		span(1/1)
		height 100%
		fixed top left
	&-modal
		display none
		width 50%
		absolute top 50% left 50%
		transform translate(-50%, -50%)
		&.scale
			height 0
			width 0
			display block
		+below('m')
			fixed top 0
			left 0 !important
			transform translate(0)
			width 100%
			height 100%
			border-radius 0 !important
